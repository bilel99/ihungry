{% extends 'base.html.twig' %}
{% block title %}{{ 'register.title' | trans }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ 'register.intro' | trans }}</h5>

                        {{ form_start(form, {'attr':{'class':'form-signin'}}) }}
                        <div class="form-group">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.secretpass) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.password) }}
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase"
                                type="submit">{{ 'register.submit' | trans }}
                        </button>
                        <hr class="my-4">
                        <a class="btn btn-lg btn-back-to-registered btn-block text-uppercase" href="{{ path('app_login') }}"><i
                                    class="fas fa-user-plus mr-2"></i> {{ 'login.intro' | trans }}
                        </a>
                        <a class="btn btn-lg btn-return-back-page btn-block text-uppercase"
                           href="{{ path('homepage') }}"><i
                                    class="fas fa-chevron-left mr-2"></i> {{ 'home.return.back' | trans }}
                        </a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}