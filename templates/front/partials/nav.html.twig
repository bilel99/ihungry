<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('homepage') }}">IHungry</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {% if current_menu is defined and current_menu == 'accueil' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('homepage') }}">{{ 'nav.home' | trans }}</a>
                </li>
                <li class="nav-item {% if current_menu is defined and current_menu == 'contact' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('contact') }}">{{ 'nav.contact' | trans }}</a>
                </li>
                <li class="nav-item {% if current_menu is defined and current_menu == 'restaurant' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('restaurant.index') }}">{{ 'nav.restaurant' | trans }}</a>
                </li>
            </ul>
            <ul class="navbar-nav mt-2 mt-md-0">
                {% if not app.user %}
                    <li class="nav-item {% if current_menu is defined and current_menu == 'login' %}active{% endif %}">
                        <a class="nav-link"
                           href="{{ path('app_login') }}">{{ 'nav.signIn' | trans }}</a>
                    </li>
                    <li class="nav-item {% if current_menu is defined and current_menu == 'registration' %}active{% endif %}">
                        <a class="nav-link"
                           href="{{ path('security.registration') }}">{{ 'nav.registration' | trans }}</a>
                    </li>
                {% else %}
                    <li class="nav-item dropdown {% if current_menu is defined and current_menu == 'profil' %}active{% endif %}">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'nav.welcome' | trans }} {{ app.user.firstname }} <span class="ui-icon-caret-1-e"></span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item"
                               href="{{ path('profil', {'id': app.user.id}) }}">{{ 'nav.profil' | trans }}</a>

                            {% if is_granted("ROLE_ADMIN") %}
                                <a class="dropdown-item" href="{{ path('admin.dashboard') }}">{{ 'nav.admin' | trans }}</a>
                            {% endif %}

                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('security_logout') }}">{{ 'nav.logout' | trans }}</a>
                        </div>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
    <a href="{{ path('restaurant.create') }}" class="float">
        <i class="fas fa-plus my-float"></i>
    </a>
    <div class="label-container">
        <div class="label-text">{{ 'add.restaurant' | trans }}</div>
        <i class="fa fa-play label-arrow"></i>
    </div>
</header>