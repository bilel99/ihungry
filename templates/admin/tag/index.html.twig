{% extends 'base.admin.html.twig' %}
{% block title %}{{ 'admin.tag' | trans }}{% endblock %}
{% block body %}
    <h1>{{ 'admin.tag' | trans }}</h1>

    {{ include('admin/modals/create-tag.html.twig') }}

    <!-- float button -->
    <a href="" class="float" data-toggle="modal" data-target="#create-tag-modal">
        <i class="fas fa-plus my-float"></i>
    </a>
    <div class="label-container">
        <div class="label-text">{{ 'add.tag' | trans }}</div>
        <i class="fa fa-play label-arrow"></i>
    </div>

    <div class="offset-2 col-10">
        <table class="table table-striped table-light">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Created at</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            {% for row in tag %}
                <tr id="tag_{{ row.id }}" data-id="{{ row.id }}">
                    <td>{{ row.id }}</td>
                    <td id="row-title-{{ row.id }}">{{ row.tag }}</td>
                    <td>{{ row.createdAt|date('j M Y') }}</td>
                    <td class="text-center">
                        <a href="{{ url('admin.tag.delete', {'id': ':TAG_ID'}) }}"
                           class="delete-tag btn btn-danger btn-xs">
                            <i class="fas fa-trash-alt"></i> Del
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}